/* pages/activity/group/index.wxss */
.group-container {
    padding: 0px 30rpx;
}

.search {
    position: relative;
    height: 62rpx;
    border-radius: 31rpx;
    background-color: #f6f6f6;
    padding-left: 70rpx;
}

.weui-input {
    height: 62rpx;
    border-radius: 31rpx;
}

.weui-image {
    top: 50%;
    left: 20rpx;
    transform: translateY(-50%);
    width: 30rpx;
    height: 30rpx;
    position: absolute;
}

.group-item-list {
    align-items: center;
    padding-bottom: 16rpx;
    border-bottom: 2rpx solid #f2f2f2;
}

.team {
    color: #fff;
    padding: 2rpx 8rpx;
    font-size: 22rpx;
    background-color: #36B8B0;
    border-radius: 4rpx;
    margin-left: 12rpx;
}

.topArrow {
    display: none;
    border-radius: 50%;
}

/* 按钮显示上还是下的 */
.showArrow {
    display: block;
}
.sub-item{
    display: none;
}
/* 控制二级菜单显示的 */
.sub-show{
    display: block;
}
.group-item{
    margin-top:44rpx
}
.group-item-content .title .t {
    font-size: 30rpx;
    color: #333;
}

.group-item-content .desc {
    margin-top: 5rpx;
}

.group-item-content .topArrow {
    margin-top: 4rpx;
    margin-left: 5rpx;
}

.group-item-content .desc .d {
    font-size: 26rpx;
    color: #858585;
}

.avatar-item image{
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-right: 22rpx;
}

.avatar-team {
    padding-bottom: 10rpx;
    position: relative;
}

.avatar-item-team {
    left: 50%;
    transform: translateX(-50%);
    position: absolute;
    color: #fff;
    width: 62rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    text-align: center;
    background-color: #36B8B0;
    border-radius: 4rpx;
    bottom: 0rpx;
}

.topArrow {
    width: 26rpx;
    height: 26rpx;
}

.avatar-item image {
    width: 68rpx;
    height: 68rpx;
}

.group-item-content {
    width: 462rpx;
}

.group-item-btn {
    width: 160rpx;
    height: 58rpx;
    background-color: #FF7908;
    color: #fff;
    line-height: 58rpx;
    text-align: center;
    font-size: 26rpx;
    border-radius: 30rpx;
}

.sub-item {
    padding: 40rpx 30rpx;
    border-radius: 10rpx;
    margin-top: 34rpx;
    background-color: #f9f9f9;
}

.sub-item-container {
    align-items: center;
    margin-bottom: 34rpx;
}

.avatar-sub {
    width: 86rpx;
    height: 86rpx;
    background-color: #f1f1f1;
    border-radius: 50%;
    margin-right: 22rpx;
}

.sub-item image {
    width: 86rpx;
    height: 86rpx;
}

.sub-item .title {
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
    flex: 1;
}

.sub-item .time {
    color: #858585
}
