.container {
    margin: 0;
    padding: 0;
}

.newsitem {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
    border: 2rpx solid lightblue;
}

.item_checkbox {
    margin-left: 10rpx;
    margin-top: 40rpx;
}

.img {
    width: 140rpx;
    height: 140rpx;
    padding: 5rpx;
}

.news-text {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.title {
    width: 460rpx;
}

.description {
    width: 460rpx;
}

.bottext {
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: flex-end;
    font-size: 30rpx;
}



.service {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    line-height: 120rpx;
    bottom: 0px;
}

.service .choose {
    width: 210rpx;
    padding-left: 40rpx;
    color: #858585;
}

.service .share {
    color: #fff;
    flex-grow: 1;
    text-align: center;
    font-size: 30rpx;
    background-image: linear-gradient(#FF7A08, #FF4D00);
}
