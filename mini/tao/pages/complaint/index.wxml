<view class="create-activity">
    <form bindsubmit="doComplaint">
        <view class="create-activity-container box">
            <view class="activity-form">
                <view class="item box">
                    <view class="text">投诉类型</view>
                    <radio-group name="type">
                        <label>
                            <radio value="课程投诉" checked="1" />课程投诉
                        </label>
                        <label>
                            <radio value="radio2" />业务投诉
                        </label>
                    </radio-group>
                </view>
                <view class="item box">
                    <view class="text">联系电话</view>
                    <input type="text" name="mobile" placeholder="请输入联系电话" placeholder-class="phcolor" />
                </view>
                <view class="item box">
                    <view class="text">投诉描述</view>
                    <input type="textarea" name="content" placeholder="请输入投诉描述" placeholder-class="phcolor" />
                </view>
                <button class="btn-ss submit" form-type='submit' style="width: 150rpx;margin-top: 150rpx;">提交</button>
